@model ExpenseVM
<div class="container">
	<div class="card text-white bg-light border-0 mt-4">
		<div class="card-header m-lg-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-dark text-center">@(Model.Expense.Id!=0?"Update":"Create") Expense</h2>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post">
				<input asp-for="Expense.Id" hidden />
				<div class="form-label py-2 col-12">
					<select asp-for="Expense.CategoryId" asp-items="@Model.CategoryList" class="btn btn-secondary bg-light text-dark p-1">
						<option selected disabled>--Select Category--</option>
					</select>
					<span asp-validation-for="Expense.CategoryId" class="text-danger"></span>
				</div>
				<div class="form-label py-2 col-12">
					<label asp-for="Expense.Date" class=" form-label p-0 text-dark"></label>
					<input asp-for="Expense.Date" class=" form-control"/>
					<span asp-validation-for="Expense.Date" class="text-danger"></span>
				</div>
				<div class="form-label py-2 col-12">
					<label asp-for="Expense.Amount" class=" form-label p-0 text-dark"></label>
					<input asp-for="Expense.Amount" class=" form-control" />
					<span asp-validation-for="Expense.Amount" class="text-danger"></span>
				</div>
				<div class="form-label py-2 col-12">
					<label asp-for="Expense.Description" class=" form-label p-0 text-dark"></label>
					<input asp-for="Expense.Description" class=" form-control" />
					<span asp-validation-for="Expense.Description" class="text-danger"></span>
				</div>
				<div class=" row pt-4">
					<div class="col-6">
						@if (Model.Expense.Id != 0)
						{
							<button type="submit" class=" btn btn-outline-primary form-control">UPDATE</button>
						}
						else
						{
							<button type="submit" class=" btn btn-outline-primary form-control">CREATE</button>
						}

					</div>
					<div class="col-6">
						<a asp-controller="Expense" asp-action="Index" class=" btn btn-outline-secondary text-dark form-control">BACK</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}