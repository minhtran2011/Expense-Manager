@model Category
<div class="container">
	<div class="card text-white bg-light border-0 mt-4">
		<div class="card-header m-lg-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-dark text-center">Delete Category</h2>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post">
				<div class="form-label py-2 col-12">
					<label asp-for="Name" class=" form-label p-0 text-dark"></label>
					<input asp-for="Name" disabled class=" form-control" />
				</div>
				<div class="form-label py-2 col-12">
					<label asp-for="Icon" class=" form-label p-0 text-dark"></label>
					<input asp-for="Icon" disabled class=" form-control" />
				</div>
				<div class=" row pt-2">
					<div class="col-6">
						<button type="submit" class=" btn btn-outline-danger form-control">DELETE</button>
					</div>
					<div class="col-6">
						<a asp-controller="Category" asp-action="Index" class=" btn btn-outline-secondary text-dark form-control">BACK</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

